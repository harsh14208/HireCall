<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/client_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flipkart"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/primary_skill_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/client_name_text_view"
            android:layout_marginTop="8dp"
            android:text="Java Architect" />

        <TextView
            android:id="@+id/date_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="21 March 2017" />

        <TextView
            android:id="@+id/time_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/date_text_view"
            android:layout_marginTop="8dp"
            android:text="20:17" />

        <TextView
            android:id="@+id/feedback_purpose_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/primary_skill_text_view"
            android:layout_marginTop="8dp"
            android:text="Introductory Call"
            android:textColor="@android:color/black"
            android:visibility="gone" />

        <TextView
            android:id="@+id/feedback_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/feedback_purpose_text_view"
            android:layout_marginTop="8dp"
            android:text="Left the job due to issues"
            android:visibility="gone" />

        <TextView
            android:id="@+id/user_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/feedback_text_view"
            android:text="John Pinto"
            android:textSize="12sp"
            android:textStyle="italic" />

    </RelativeLayout>

</android.support.v7.widget.CardView>