<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<android.support.v7.widget.CardView
    android:id="@+id/card_view_resume"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:layout_margin="8dp"
    android:foreground="?selectableItemBackground"
    android:orientation="horizontal"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="3dp">
    <TextView
        android:id="@+id/resume_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Resume"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="8dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/resume_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="Status"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/recruiter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:textAlignment="viewEnd"
        android:layout_weight="0.5"
        android:paddingRight="8dp"
        android:layout_marginBottom="10dp"
        android:text="You"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="72dp"
        android:paddingTop="30dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:id="@+id/mNamelayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/mName_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Name"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mExperience_text_view"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text=" | 7.5 Yrs"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/add_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
               android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/namelayout"
                android:src="@drawable/ic_add"
                android:tint="@color/md_blue_A700" />

        </LinearLayout>

        <TextView
            android:id="@+id/mCompany_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mNamelayout"
            android:text="Company Name" />
        <TextView
        android:id="@+id/mPhone_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mNamelayout"
        android:visibility="gone" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/mCompany_text_view" />

        <TextView
            android:id="@+id/mPosition_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mCompany_text_view"
            android:text="Position At Company" />

        <TextView
            android:id="@+id/mUniversity_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mPosition_text_view"
            android:text="University" />


    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/mUser_circle_image_view"
        android:layout_width="56dp"
        android:layout_height="72dp"
        android:layout_margin="10dp"
        android:paddingTop="15dp"
        android:src="@drawable/ic_user" />

</android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:layout_marginEnd="4dp">
        <TextView
            android:id="@+id/clientskills"
            android:layout_width="290dp"
            android:paddingLeft="10dp"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="Flipkart - Software Engineer"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/message_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:tint="@color/md_black_1000"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/icon_email"/>
        <ImageView
            android:id="@+id/call_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:tint="@color/md_black_1000"
            android:src="@drawable/ic_call"/>
    </LinearLayout>
</LinearLayout>